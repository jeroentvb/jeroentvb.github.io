<section id="work">
  <h2><%= translations.work.page_title %></h2>
  <% work.forEach((item, i) => {
    if (i > 3) { %>
      <article class="item more-work hidden">
    <% } else { %>
      <article class="item">
    <% } %>
      <div class="item__header">
        <picture>
          <source srcset="<%= item.image.webp %>" type="image/webp" >
          <source srcset="<%= item.image.default %>" type="image/jpeg">
          <img src="<%= item.image.default %>" alt="<%= item.image.alt %>">
        </picture>
      </div>
      <div class="item__content">
        <h3><%= item.title %></h3>
        <p><%- item.text %></p>
        <div class="used-skills">

          <% item.skills.forEach(skill => { %>
            <p class="monospace"><%= skill %></p>
          <% }) %>

          <% if (item.link.github) { %>
            <a href="<%= item.link.github %>" target="_blank" rel="noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 120.78 117.79" class="icon"><defs><style>.cls-1,.cls-2{fill:#fff;}.cls-1{fill-rule:evenodd;}</style></defs><title>Asset 2</title><g data-name="Layer 2"><g data-name="Layer 1"><path class="cls-1" d="M60.39,0A60.39,60.39,0,0,0,41.3,117.69c3,.56,4.12-1.31,4.12-2.91,0-1.44-.05-6.19-.08-11.24C28.54,107.19,25,96.42,25,96.42c-2.75-7-6.71-8.84-6.71-8.84-5.48-3.75.41-3.67.41-3.67,6.07.43,9.26,6.22,9.26,6.22,5.39,9.23,14.13,6.57,17.57,5,.55-3.9,2.11-6.56,3.84-8.07C36,85.55,21.85,80.37,21.85,57.23A23.35,23.35,0,0,1,28.08,41c-.63-1.52-2.7-7.66.58-16,0,0,5.07-1.62,16.61,6.19a57.36,57.36,0,0,1,30.25,0C87,23.42,92.11,25,92.11,25c3.28,8.32,1.22,14.46.59,16a23.34,23.34,0,0,1,6.21,16.21c0,23.2-14.12,28.3-27.57,29.8,2.16,1.87,4.09,5.55,4.09,11.18,0,8.08-.06,14.59-.06,16.57,0,1.61,1.08,3.49,4.14,2.9A60.39,60.39,0,0,0,60.39,0Z"/><path class="cls-2" d="M22.87,86.7c-.13.3-.6.39-1,.19s-.69-.61-.55-.91.61-.39,1-.19.69.61.54.91Z"/><path class="cls-2" d="M25.32,89.43c-.29.27-.85.14-1.24-.28a.92.92,0,0,1-.17-1.25c.3-.27.84-.14,1.24.28s.47,1,.17,1.25Z"/><path class="cls-2" d="M27.7,92.91c-.37.26-1,0-1.35-.52s-.37-1.18,0-1.44,1,0,1.35.51.37,1.19,0,1.45Z"/><path class="cls-2" d="M31,96.27A1.13,1.13,0,0,1,29.41,96c-.53-.49-.68-1.18-.34-1.54s1-.27,1.56.23.68,1.18.33,1.54Z"/><path class="cls-2" d="M35.46,98.22c-.15.47-.82.69-1.51.49s-1.13-.76-1-1.24.82-.7,1.51-.49,1.13.76,1,1.24Z"/><path class="cls-2" d="M40.4,98.58c0,.5-.56.91-1.28.92s-1.3-.38-1.31-.88.56-.91,1.29-.92,1.3.39,1.3.88Z"/><path class="cls-2" d="M45,97.8c.09.49-.41,1-1.12,1.12s-1.35-.17-1.44-.66.42-1,1.12-1.12,1.35.17,1.44.66Z"/></g></g></svg>
            </a>
          <% } %>

          <% if (item.link.external) { %>
            <a href="<%= item.link.external %>" target="_blank" rel="noreferrer">
              <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
              	 viewBox="0 0 24 24" style="enable-background:new 0 0 24 24;" xml:space="preserve" class="icon">
              <style type="text/css">
              	.st0{fill:none;}
              	.st1{fill:#FFFFFF;}
              </style>
              <path class="st1" d="M19,19H5V5h7V3H5C3.9,3,3,3.9,3,5v14c0,1.1,0.9,2,2,2h14c1.1,0,2-0.9,2-2v-7h-2V19z M14,3v2h3.6l-9.8,9.8
              	l1.4,1.4L19,6.4V10h2V3H14z"/>
              </svg>
            </a>
          <% } %>
        </div>
      </div>
    </article>
  <% })

  if (work.length > 4) { %>
    <button class="load-more-button" data-more-work="<%= translations.work.more_work %>" data-less-work="<%= translations.work.less_work %>"><%= translations.work.load_more %></button>
  <% } %>

</section>
